{
  "compilerOptions": {
    "paths": {
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "views/*": ["views/*"],
    },
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["ESNext", "dom"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
